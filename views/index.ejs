<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Frank+Ruhl+Libre:wght@700&family=Patua+One&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="./stylesheets/style.css">
  </head>
  <body>

    <div class= "home">
    <!-- Barre -->
    <%- include('navbar'); %>

     <!-- Grille -->
    <div class="container-fluid">
      <div class="row">
          <div class="col-12 col-lg-6 col-sm-6 d-flex justify-content-center mx-auto">
           
      <!-- sign in-->
      <div class="col-12 col-lg-6 text-center">
        <h5>Connection</h5>
        <form action="/SignIn" method="post" >
          <div class="form-group">
            <input type="email" class="form-control" name="emailSignInFF" placeholder ="Email" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="passwordSignInFF" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-outline-light">Confirmer</button>
        </form>
       </div>


      <!-- sign up-->
      <div class="col-12 col-lg-6 text-center ">
        <h5>Inscription</h5>
        <form action="/SignUp" method="post">
          <div class="form-group">
            <input type="text" class="form-control" name="nameSignUpFF" placeholder ="Name" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="firstNameSignUpFF" placeholder ="FirstName" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="emailSignUpFF" placeholder ="Email" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="passwordSignUpFF" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-outline-light">Confirmer</button>
          </form>
      </div>

    <!--footer-->
          </div>
        </div>
     </div>
     <%- include('footer'); %>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
  </html>
